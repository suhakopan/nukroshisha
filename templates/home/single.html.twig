{% extends 'base.html.twig' %}

{% block title %}{{ setting[0].title }} | {{ product[0].title }}{% endblock %}
{% block description %}{{ product[0].description }}{% endblock %}
{% block keywords %}{{ product[0].keywords }}{% endblock %}

{% block body %}

    <header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url({{ asset('uploads') }}/images/{{ product[0].image1 }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <div class="display-t">
                        <div class="display-tc animate-box" data-animate-effect="fadeIn">
                            <h1>{{ product[0].title }}</h1>
                            <h2>{{ product[0].description }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="fh5co-product">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 animate-box">
                    <div class="owl-carousel owl-carousel-fullwidth product-carousel">
                        {% for i in images %}
                            <div class="item">
                                <div class="active text-center">
                                    <figure>
                                        <img src="{{ asset('uploads') }}/images/{{ i.image}}" alt="user" width="600" height="800">
                                    </figure>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row animate-box">
                        <form name="shopcart" method="post" action="{{ path('shopcart_new') }}">
                        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                            <input type="text" name="shopcart[Quantity]" class="form-control" value="1" placeholder="Adet" min="1" max="10" maxlength="1" pattern="[1-9]{1}" title="En fazla 9 adet sipariş verebilirsiniz">
                            <h2>₺{{ product[0].sprice }}</h2>
                            <h2>{{ product[0].title }}</h2>
                            <input type="hidden" name="shopcart[ProductID]" value="{{ product[0].id }}">
                            <input type="hidden" name="shopcart[UserID]" value="{{ app.user.id }}">
                            <input type="hidden" name="token" value="{{ csrf_token('add-item') }}">

                            <p>
                                <button type="submit" class="btn btn-primary btn-outline btn-lg">Sepete Ekle</button>
                            </p>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="fh5co-tabs animate-box">
                        <ul class="fh5co-tab-nav">
                            <li class="active"><a href="#" data-tab="1"><span class="icon visible-xs"><i class="icon-file"></i></span><span class="hidden-xs">Ürün Detayları</span></a></li>
                            <li><a href="#" data-tab="2"><span class="icon visible-xs"><i class="icon-bar-graph"></i></span><span class="hidden-xs">Sipariş Bilgileri</span></a></li>
                            <li><a href="#" data-tab="3"><span class="icon visible-xs"><i class="icon-bar-graph"></i></span><span class="hidden-xs">Banka Hesaplarımız</span></a></li>
                        </ul>

                        <!-- Tabs -->
                        <div class="fh5co-tab-content-wrap">

                            <div class="fh5co-tab-content tab-content active" data-tab-content="1">
                                <div class="col-md-10 col-md-offset-1">
                                    <!-- <span class="price">₺450</span> -->
                                    {{ product[0].detail|raw }}
                                </div>
                            </div>

                            <div class="fh5co-tab-content tab-content" data-tab-content="2">
                                <div class="col-md-10 col-md-offset-1">
                                    <ul>
                                        <li>Siparişler alındıktan 2-5 iş günü içerisinde kargoya verilir</li>
                                        <li>Ürün iade garantisi vardır</li>
                                        <li>Cayma süresi sipariş verildikten sonra 14 iş günüdür</li>
                                        <li>Ürünlerimiz anlaşmalı kargo aracılığı ile adresinize gönderilecektir</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="fh5co-tab-content tab-content" data-tab-content="3">
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="citem">
                                        <img src="{{ asset('assets') }}/images//garanti.png" class="citemA">
                                        <div class="citemB faceL">
                                            <p><strong>Hesap İsmi:</strong> Elektronik Bilgi Güvenliği A.Ş. Garanti Bankası İstanbul Göztepe Şube<br><strong>Şube Kodu:</strong> 299<br><strong>Hesap No:</strong> 6298142<br><strong>IBAN:</strong> TR 4700 0620 0029 9000 0629 8142</p>
                                        </div>
                                    </div>
                                    <div class="citem">
                                        <img src="{{ asset('assets') }}/images//yapi-kredi.png" class="citemA">
                                        <div class="citemB faceL">
                                            <p><strong>Hesap İsmi:</strong> Elektronik Bilgi Güvenliği A.Ş. Garanti Bankası İstanbul Göztepe Şube<br><strong>Şube Kodu:</strong> 299<br><strong>Hesap No:</strong> 6298142<br><strong>IBAN:</strong> TR 4700 0620 0029 9000 0629 8142</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %} {% include 'home/_footer.html.twig' %}{% endblock %}