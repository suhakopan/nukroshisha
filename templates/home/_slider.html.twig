<aside id="fh5co-hero" class="js-fullheight">
    <div class="flexslider js-fullheight">
        <ul class="slides">
            {% for p in slider %}
            <li style="background-image: url({{ asset('uploads') }}/images/{{ p.image1 }});">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="col-md-6 col-md-offset-3 col-md-pull-3 js-fullheight slider-text">
                        <div class="slider-text-inner">
                            <div class="desc">
                                <span class="price">{{ p.sprice }}₺</span>
                                <h2>{{ p.title }}</h2>
                                <p>{{ p.description }}</p>
                                <p><a href="{{ path('product_detail', {'id' : p.id}) }}" class="btn btn-primary btn-outline btn-lg">Satın Al</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</aside>