{% extends 'adminbase.html.twig' %}

{% block title %}Nukro Shisha | Ana Kategoriler{% endblock %}

{% block sidebar %} {% include 'admin/_sidebar.html.twig' %}{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        {{ include('admin/messages.html.twig') }}
                        <div class="box-header">
                            <h3 class="box-title">Ana Kategoriler</h3>

                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody><tr>
                                    <th>ID</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Anahtar Kelimeler</th>
                                    <th>Durum</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>{{ category.title }}</td>
                                        <td>{{ category.description }}</td>
                                        <td>{{ category.keywords }}</td>
                                        <td>
                                            {% if category.status == 1 %}
                                                <span class="label label-success">Aktif</span>
                                            {% endif %}
                                            {% if category.status == 0 %}
                                                <span class="label label-danger">Pasif</span>
                                            {% endif %}
                                        </td>
                                        <td><a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-info  btn-xs" role="button">Düzenle</a></td>
                                        <td><a href="{{ path('admin_category_delete', {'id': category.id}) }}" onclick="return confirm('Kayıt silinecek emin misiniz?');" class="btn btn-warning  btn-xs" role="button">Sil</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-md active pull-right" role="button" aria-pressed="true">Yeni Kayıt</a>
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
{% endblock %}

{% block footer %} {% include 'admin/_footer.html.twig' %}{% endblock %}

